% redirect the shadow theme to include our modified split theme instead
% of the original
\let\temp@useoutertheme=\useoutertheme
\def\useoutertheme#1{%
  \def\temp@stra{#1}%
  \def\temp@strb{split}%
  \ifx\temp@stra\temp@strb%
    \temp@useoutertheme{2partfoot}%
    \temp@useoutertheme{2parthead}%
  \fi%
}
\temp@useoutertheme{shadow}
\let\useoutertheme=\temp@useoutertheme

